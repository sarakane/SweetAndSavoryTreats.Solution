@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Flavor

<h2>Add a treat</h2>

<h4>Add a treat for this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Add" class="btn btn-outline-dark"/>
}

<p>@Html.ActionLink("Back to flavor details", "Details", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("View all flavors", "Index")</p>