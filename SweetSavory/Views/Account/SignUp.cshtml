@{
  Layout = "_Layout";
}

@using SweetSavory.ViewModels

@model SignUpViewModel

<h1>Sign Up</h1>
<hr/>
@using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
{
  <div class="form-group">
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email, new { @class = "form-control" })
    <span data-valmsg-for="Email" data-valmsg-replace="true" class="text-danger"></span>
  </div>

  <div class="form-group">
    @Html.LabelFor(user=> user.Password)
    @Html.PasswordFor(user=> user.Password, new { @class = "form-control" })
    <span data-valmsg-for="Password" data-valmsg-replace="true" class="text-danger"></span>
  </div>   

  <div class="form-group">
    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword, new { @class = "form-control" })
    <span data-valmsg-for="ConfirmPassword" data-valmsg-replace="true" class="text-danger"></span>
  </div>   

  <input type="submit" value="Sign up" class="btn btn-outline-dark"/>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>